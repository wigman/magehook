<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework-message-queue:etc/queue.xsd">
  <!-- Reference XML: queue_publisher.xml -->
  <broker topic="async.webhook.http-request"
          exchange="magento-db"
          type="db">
    <queue name="webhook_http_request_queue"
           consumer="hookHttpRequest"
           consumerInstance="Magento\Framework\MessageQueue\BatchConsumer"
           handler="MageHook\Hook\Model\Queue\Consumer::processOperations"/>
  </broker>
</config>
